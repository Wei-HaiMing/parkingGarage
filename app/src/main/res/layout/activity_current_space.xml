<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CurrentSpaceActivity">

    <TextView
        android:id="@+id/CurrentSpaceTextView"
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:text="@string/current_space"
        android:textSize="50sp"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <Button
        android:id="@+id/CurrentSpaceBackButton"
        android:layout_width="250dp"
        android:layout_height="90dp"
        app:layout_constraintTop_toBottomOf="@+id/CurrentSpaceTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/currentSpaceBack"
        android:textSize="25sp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>